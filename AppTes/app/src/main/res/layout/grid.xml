<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="2"
    android:padding="@dimen/range_6">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="@dimen/range_100"
        android:layout_height="@dimen/range_100"
        app:srcCompat="@drawable/image2"
        android:layout_marginRight="@dimen/range_6"
        android:layout_marginBottom="@dimen/range_6"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="@dimen/range_100"
        android:layout_height="@dimen/range_100"
        app:srcCompat="@drawable/image3" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="@dimen/range_100"
        android:layout_height="@dimen/range_100"
        app:srcCompat="@drawable/image4" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="@dimen/range_100"
        android:layout_height="@dimen/range_100"
        app:srcCompat="@drawable/image5" />
</GridLayout>